{
  "root": true,
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "quotes": "off",
    "curly": "off",
    "import/no-anonymous-default-export": "off",
    "no-unused-vars": "warn",
    "no-var": "error"
  },
  "env": {
    "browser": true,
    "es2017": true,
    "node": true
  },
  "ignorePatterns": ["types", "dist", ".next"]
}
