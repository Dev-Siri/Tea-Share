{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./base.json",
  "compilerOptions": {
    "removeComments": true,
    "skipLibCheck": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "jsx": "preserve",
    "baseUrl": "../../apps/pfp-generation-server",
    "outDir": "../../apps/pfp-generation-server/dist",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "plugins": [{ "name": "next" }]
  }
}
